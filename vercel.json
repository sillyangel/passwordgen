{
  "version": 2,
  "builds": [
    { "src": "index.js", "use": "@vercel/node" },
    { "src": "public/style.css", "use": "@vercel/static" },
    { "src": "public/favicon.ico", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|json))$", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.js" },
    { "src": "/public/style.css", "dest": "/style.css" },
    { "src": "/public/favicon.ico", "dest": "/favicon.ico" }
  ]
}